<div>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="inputName">Name</label>
            <input type="text" value="{{course.name}}" class="form-control" id="inputName" placeholder="Edit name"
                name="name" />
        </div>
        <div class="form-group">
            <label for="inputDescription">Description</label>
            <textarea type="text" class="form-control" id="inputDescription" placeholder="Edit description"
                name="description">{{course.description}}
            </textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>